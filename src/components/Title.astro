      ],
    ];

    let count = -1;
    let levelArray = 0;

    const containerAnimation = document.getElementsByTagName("h2")[0];

    function paintText() {
      count++;

      containerAnimation.textContent += text[levelArray][count];

      if (count === text[levelArray].length - 1) {
        clearInterval(interval);

        setTimeout(() => {
          interval = setInterval(() => {
            containerAnimation.textContent = "";
            count--;
            text[levelArray].pop();

            text[levelArray].forEach((element) => {
              containerAnimation.textContent += element;
            });

            if (count < 0) {
              clearInterval(interval);
              levelArray++;
              interval = setInterval(paintText, 150);

              if (levelArray > text.length - 1) {
                clearInterval(interval);
                levelArray = 0;
                animation();
              }
            } else {
              if (levelArray === 1) {
                clearInterval(interval);
              }
            }
          }, 150);
        }, 1000);
      }
    }

    let interval = setInterval(paintText, 150);
  }
  window.addEventListener("load", animation);
</script>
